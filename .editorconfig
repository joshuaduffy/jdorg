###############################
# Core EditorConfig Options   #
###############################
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# Config files
[*.{yaml,yml,json}]
indent_size = 2
insert_final_newline = true

[*.{py}]
indent_size = 4
insert_final_newline = true
max_line_length = 120

[*.{md}]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
